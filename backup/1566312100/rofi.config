* {
    accent: #02a2ac;
    dark: #252525;
    light: #e8e8ec;

    font-size: 10px;
    border-color: @dark;
    background-color: @dark;
    text-color: @light;
    margin: 0;
    margin-bottom: 0;
    margin-top: 0;
    spacing: 0;
}

#listview {
    spacing: 0;
    scrollbar: false;
    margin: 0;
    dynamic: true;

}

#window {
    background-color: @dark;
    border-color: @dark;
    border: 5;
    width: 486px;
    height: 240px;
    border-radius: 0px;
    x-offset: -4px;
    y-offset: 16px;
}

#mainbox {
    border: 0;
    padding: 0;
    background-color: @dark;
}

#element {
    padding: 8;
    border: 0 0 1 0;
    border-color: @dark;
    background-color: @dark;
}

#element.selected.normal {
    background-color: @light;
    text-color: @dark;
    border-radius: 0px;

    border: 0 0 1 0;
    border-color: @dark;
}

#element.alternate.normal {
    background-color: @dark;
}

#element.normal.active {
    background-color: @accent;
}

#element.alternate.active {
    background-color: @accent;
}

#element.selected.active {
    background-color: @light;
    text-color: @dark;
    border-radius: 0px;

    border: 0 0 1 0;
    border-color: @dark;
}

#inputbar {
    spacing: 0;
    border: 3px;
    padding: 0.5em 1em;
    background-color: #1d1f21;
    index: 0;
}

#inputbar normal {
    foreground-color: {color15}FF;
    background-color: {color1}FF;
}

#sidebar {
    border: 3px;
    padding: 0.5em 1em;
    background-color: #000000FF;
    index: 10;
}
#button selected {
    text-color: #000000FF;
}

#inputbar {
    children:   [ textbox-prompt-colon,entry,case-indicator ];
}
#textbox-prompt-colon {
    expand:     false;
    str:        "ïŒƒ";
    margin:     0px 0.3em 0em 0em ;
    text-color: {color15};
}